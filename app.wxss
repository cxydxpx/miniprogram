/**app.wxss**/

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 32rpx;
}

.container-css {
  color: #fff;
}

.page-head {
  padding: 60rpx 50rpx 80rpx;
  text-align: center;
}

.page-head-title {
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 32rpx;
  color: #bebebe;
}

.page-head-line {
  margin: 0 auto;
  width: 150rpx;
  height: 1rpx;
  background-color: #d8d8d8;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section-title {
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #999;
  margin-bottom: 28rpx;
}

.page-section-spacing {
  box-sizing: border-box;
  padding: 0 80rpx;
}

.flex-warp {
  margin-top: 60rpx;
  display: flex;
}



